  },
  "keywords": [
    "mcp",
    "mcp-server",
    "ilovepdf",
    "iloveimg",
    "pdf",
    "compress",
    "merge",
    "split",
    "convert",
    "image"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "form-data": "^4.0.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
