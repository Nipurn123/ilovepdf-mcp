  "description": "MCP server for iLovePDF/iLoveIMG/iLoveSign API. Compress, merge, split, convert PDFs and images.",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "ilovepdf-mcp": "build/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
